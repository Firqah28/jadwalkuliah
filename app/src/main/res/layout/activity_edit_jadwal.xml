<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white"
    tools:context=".EditJadwalActivity">

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/btnSimpan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit Jadwal"
                android:textSize="22sp"
                android:fontFamily="@font/semibolditalic"
                android:textStyle="bold"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <EditText
                android:id="@+id/etNamaMK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Mata Kuliah"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etDosen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Dosen"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etHari"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Hari"
                android:inputType="textCapWords"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etJam"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Jam"
                android:inputType="text"
                android:layout_marginBottom="12dp" />

            <EditText
                android:id="@+id/etRuangan"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Ruangan"
                android:inputType="text"
                android:layout_marginBottom="12dp" />
        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/btnSimpan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Simpan"
        android:textStyle="bold"
        android:backgroundTint="@color/purple_500"
        android:textColor="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="20dp" />

</androidx.constraintlayout.widget.ConstraintLayout>
