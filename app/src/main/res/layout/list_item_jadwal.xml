<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    android:layout_marginHorizontal="4dp"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="16dp"
    card_view:cardElevation="6dp"
    android:padding="12dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Nama Matakuliah -->
        <TextView
            android:id="@+id/tvNamaMK"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pemrograman Mobile"
            android:layout_margin="8dp"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000" />

        <!-- Deskripsi -->
        <TextView
            android:id="@+id/tvDeskripsi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvNamaMK"
            android:layout_marginTop="4dp"
            android:layout_margin="8dp"
            android:text="Make UI design for the mini project..."
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Hari -->
        <TextView
            android:id="@+id/tvHari"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDeskripsi"
            android:layout_marginTop="8dp"
            android:text="Jumat"
            android:layout_margin="8dp"
            android:textSize="12sp"
            android:textColor="#555555" />

        <!-- Tombol Edit -->
        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="40dp"
            android:layout_alignBottom="@id/tvHari"

            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_edit"
            android:tint="#555555"
            android:contentDescription="Edit" />

        <!-- Tombol Hapus -->
        <ImageButton
            android:id="@+id/btnHapus"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@id/tvHari"
            android:layout_marginEnd="4dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@android:drawable/ic_menu_delete"
            android:tint="#555555"
            android:contentDescription="Hapus" />

    </RelativeLayout>
</androidx.cardview.widget.CardView>
